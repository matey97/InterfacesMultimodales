<Window x:Class="VolumeMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VolumeMeter"
        mc:Ignorable="d"
        Title="Volume Meter" SizeToContent="WidthAndHeight">
    <StackPanel Margin="4">
        <Canvas Name="myCanvas" Width="0" Height="0"></Canvas>
        <Slider Name="mySlider" Minimum="0" Maximum="100" Margin="0,4,0,0" ValueChanged="mySlider_ValueChanged"></Slider>
    </StackPanel>
</Window>
